@using Microsoft.AspNetCore.Mvc.Localization
@{
    @model ChessStatistics.ViewModels.LoginModel
    ViewData["CurrentPage"] = "Autorization";
    ViewData["Title"] = "Авторизация";
    ViewData["Dog"] = "@";
}

<div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content text-white bg-dark">
        <div class="modal-header ">
            <h5 class="modal-title">Авторизация</h5>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form name="loginForm" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail">Почта</label>
                        <input type="email"
                               name="email"
                               class="form-control"
                               id="exampleInputEmail"
                               placeholder="Email"
                               pattern="([0-9a-z_.]+@(ViewData["Dog"])[0-9a-z_^.]+.[a-z]{2,3})+"
                               title="Почта введена некорректно">
                        @if (ViewBag.EmailMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.EmailMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword">Пароль</label>
                        <input type="password"
                               name="password"
                               class="form-control"
                               id="exampleInputPassword"
                               placeholder="Пароль">
                        @if (ViewBag.PasswordMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.PasswordMessage</small>
                        }
                    </div>

                    <button type="submit" class="btn btn-primary mb-2">
                        Авторизоваться
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
