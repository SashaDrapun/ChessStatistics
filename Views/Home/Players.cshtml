<style>
        body {
            background-color: #343a40;
            color: #fff;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .filters {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 20px;
        width: 100%;
        gap: 10px;
    }
    .filter-item {
        display: flex;
        flex-direction: column;
        flex: 1 1 calc(25% - 20px); /* Adjust flex-basis to fit 4 items per row */
        gap: 5px;
    }
    .filters select, .filters input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #4a5057;
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        font-size: 14px;
        color: #fff;
    }
    .filters select:focus, .filters input:focus {
        outline: none;
        border-color: #3498db;
    }
    .filters label {
        font-size: 14px;
        color: #fff;
    }
        h1 {
            text-align: center;
            color: #fff;
            margin-bottom: 10px;
        }
        .player-card {
            background: #2c3e50;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 10px;
            overflow: hidden;
            width: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: transform 0.2s;
            position: relative;
        }
        .player-card:hover {
            transform: translateY(-5px);
        }
        .player-card img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-top: 10px;
        }
        .player-info {
            padding: 10px;
            text-align: center;
            width: 100%;
        }
        .player-info h2 {
            margin: 0 0 10px;
            color: #ecf0f1;
            font-size: 18px;
        }
        .player-info p {
            margin: 5px 0;
            color: #3498db;
            font-size: 14px;
        }
        .player-info i {
            margin-right: 5px;
            color: #3498db;
        }
        .action-buttons {
            display: flex;
            justify-content: space-around;
            width: 100%;
            margin-top: 10px;
            padding: 5px 10px; /* Add padding to the sides */
            gap: 5px; /* Add space between buttons */
        }
        .action-buttons button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 5px 10px; /* Adjust padding */
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px; /* Adjust font size */
            transition: background-color 0.3s;
        }
        .action-buttons button:hover {
            background-color: #2980b9;
        }
        .edit-button {
            background-color: #4CAF50;
        }
        .edit-button:hover {
            background-color: #45a049;
        }
        .delete-button {
            background-color: #f44336;
        }
        .delete-button:hover {
            background-color: #d32f2f;
        }
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
         -webkit-appearance: none;
                margin: 0;
            }
</style>

